{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch InsureX.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "program": "${workspaceFolder}/src/InsureX.Web/bin/Debug/net8.0/InsureX.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/InsureX.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/InsureX.Web/Views",
                "/Pages": "${workspaceFolder}/src/InsureX.Web/Pages",
                "/Controllers": "${workspaceFolder}/src/InsureX.Web/Controllers"
            },
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "exceptions": true
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch InsureX.Web (Production)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "program": "${workspaceFolder}/src/InsureX.Web/bin/Release/net8.0/InsureX.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/InsureX.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/InsureX.Web/Views"
            }
        },
        {
            "name": "Launch InsureX.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/InsureX.Api/bin/Debug/net8.0/InsureX.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/InsureX.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5002;http://localhost:5003"
            },
            "sourceFileMap": {
                "/Controllers": "${workspaceFolder}/src/InsureX.Api/Controllers"
            },
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Launch InsureX.Api (Production)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/InsureX.Api/bin/Release/net8.0/InsureX.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/InsureX.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production",
                "ASPNETCORE_URLS": "https://localhost:5002;http://localhost:5003"
            }
        },
        {
            "name": "Launch InsureX.Api (Watch)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "watch-api",
            "program": "${workspaceFolder}/src/InsureX.Api/bin/Debug/net8.0/InsureX.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/InsureX.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5002;http://localhost:5003"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Launch Web & API (Development)",
            "configurations": ["Launch InsureX.Web", "Launch InsureX.Api"],
            "stopAll": true,
            "presentation": {
                "group": "insurex",
                "order": 1
            }
        },
        {
            "name": "Launch Web & API (Production)",
            "configurations": ["Launch InsureX.Web (Production)", "Launch InsureX.Api (Production)"],
            "stopAll": true,
            "presentation": {
                "group": "insurex",
                "order": 2
            }
        },
        {
            "name": "Launch All with Watch",
            "configurations": ["Launch InsureX.Web", "Launch InsureX.Api (Watch)"],
            "stopAll": true,
            "presentation": {
                "group": "insurex",
                "order": 3
            }
        }
    ]
}