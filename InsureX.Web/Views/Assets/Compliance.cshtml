@model InsureX.Application.DTOs.ComplianceStatusDto
@{
    ViewData["Title"] = "Asset Compliance";
    var asset = ViewBag.Asset as AssetDto;
    var history = ViewBag.History as List<ComplianceHistoryDto> ?? new();
    var alerts = ViewBag.Alerts as List<ComplianceAlertDto> ?? new();
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Compliance Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Assets" asp-action="Index">Assets</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Assets" asp-action="Details" asp-route-id="@asset?.Id">@asset?.AssetTag</a></li>
                    <li class="breadcrumb-item active">Compliance</li>
                </ol>
            </nav>
        </div>
        <button class="btn btn-primary" onclick="runComplianceCheck()">
            <i class="fas fa-sync"></i> Run Check
        </button>
    </div>

    <!-- Compliance Status Card -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <div class="display-1 mb-3">
                        <i class="fas fa-@(Model.IsCompliant ? "check-circle text-success" : "exclamation-triangle text-danger")"></i>
                    </div>
                    <h3 class="@(Model.IsCompliant ? "text-success" : "text-danger")">
                        @Model.Status
                    </h3>
                    <p class="text-muted">Overall Status</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <div class="display-3 mb-2 fw-bold @(Model.Score >= 80 ? "text-success" : Model.Score >= 60 ? "text-warning" : "text-danger")">
                        @Model.Score%
                    </div>
                    <p class="text-muted">Compliance Score</p>
                    <small>Last Checked: @Model.LastChecked.ToString("MMM dd, yyyy HH:mm")</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <div class="display-3 mb-2 fw-bold @(alerts.Count > 0 ? "text-danger" : "text-success")">
                        @alerts.Count
                    </div>
                    <p class="text-muted">Active Alerts</p>
                    @if (alerts.Count > 0)
                    {
                        <button class="btn btn-sm btn-outline-danger" onclick="$('#alertsSection').show()">
                            View Alerts
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Active Alerts -->
    @if (alerts.Any())
    {
        <div class="card shadow mb-4" id="alertsSection">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 fw-bold">
                    <i class="fas fa-exclamation-triangle me-2"></i>Active Alerts
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Severity</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alert in alerts)
                            {
                                <tr>
                                    <td>
                                        <span class="badge @(alert.Severity >= 3 ? "bg-danger" : alert.Severity == 2 ? "bg-warning" : "bg-info") text-white">
                                            @(alert.Severity == 1 ? "Low" : alert.Severity == 2 ? "Medium" : alert.Severity == 3 ? "High" : "Critical")
                                        </span>
                                    </td>
                                    <td>@alert.Title</td>
                                    <td>@alert.Description</td>
                                    <td>@alert.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-success" onclick="acknowledgeAlert(@alert.Id)">
                                            <i class="fas fa-check"></i> Acknowledge
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Compliance History -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-history me-2"></i>Compliance History
            </h6>
        </div>
        <div class="card-body">
            @if (!history.Any())
            {
                <p class="text-center text-muted py-4">No compliance history available</p>
            }
            else
            {
                <div class="timeline">
                    @foreach (var item in history)
                    {
                        <div class="timeline-item">
                            <div class="timeline-date">
                                @item.ChangedAt.ToString("MMM dd, yyyy HH:mm")
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex align-items-center">
                                    <span class="badge @(item.NewStatus == "Compliant" ? "bg-success" : "bg-danger") me-2">
                                        @item.NewStatus
                                    </span>
                                    <span class="text-muted">
                                        (was @item.PreviousStatus)
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(item.Reason))
                                {
                                    <p class="mt-2 mb-0">@item.Reason</p>
                                }
                                <small class="text-muted">By: @item.ChangedBy</small>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function runComplianceCheck() {
            $.ajax({
                url: '@Url.Action("RunComplianceCheck", "Compliance")',
                type: 'POST',
                data: { assetId: @Model.AssetId },
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function() {
                    toastr.error('Error running compliance check');
                }
            });
        }

        function acknowledgeAlert(alertId) {
            $.ajax({
                url: '@Url.Action("AcknowledgeAlert", "Compliance")',
                type: 'POST',
                data: { id: alertId },
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        toastr.error(response.message);
                    }
                }
            });
        }
    </script>

    <style>
        .timeline {
            position: relative;
            padding: 20px 0;
        }
        .timeline-item {
            position: relative;
            padding-left: 30px;
            margin-bottom: 20px;
            border-left: 2px solid #e3e6f0;
        }
        .timeline-date {
            font-weight: bold;
            color: #4e73df;
            margin-bottom: 5px;
        }
        .timeline-content {
            background: #f8f9fc;
            padding: 10px 15px;
            border-radius: 5px;
        }
    </style>
}