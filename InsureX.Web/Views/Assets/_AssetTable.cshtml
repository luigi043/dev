@model List<InsureX.Application.DTOs.AssetDto>
@{
    ViewData["Title"] = "Non-Compliant Assets";
    var currentSort = ViewBag.CurrentSort as string ?? "assettag";
    var currentSortDir = ViewBag.CurrentSortDir as string ?? "asc";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div>
            <h1 class="h2 fw-bold">
                <i class="bi bi-exclamation-triangle me-2 text-danger"></i>Non-Compliant Assets
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Compliance</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Non-Compliant Assets</li>
                </ol>
            </nav>
        </div>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
            <button type="button" class="btn btn-primary" onclick="exportReport()">
                <i class="bi bi-file-earmark-excel"></i> Export Report
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-danger border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-danger text-uppercase mb-1">Critical Issues</div>
                            <div class="h3 mb-0 fw-bold text-gray-800" id="criticalCount">
                                @Model.Count(a => a.ComplianceScore < 60)
                            </div>
                        </div>
                        <div class="flex-shrink-0 ms-3">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-exclamation-octagon fs-1 text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-warning text-uppercase mb-1">Warning Level</div>
                            <div class="h3 mb-0 fw-bold text-gray-800" id="warningCount">
                                @Model.Count(a => a.ComplianceScore >= 60 && a.ComplianceScore < 80)
                            </div>
                        </div>
                        <div class="flex-shrink-0 ms-3">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-info border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-info text-uppercase mb-1">Average Score</div>
                            <div class="h3 mb-0 fw-bold text-gray-800" id="avgScore">
                                @(Model.Any() ? Model.Average(a => a.ComplianceScore ?? 0).ToString("F1") : "0")%
                            </div>
                        </div>
                        <div class="flex-shrink-0 ms-3">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-bar-chart fs-1 text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-primary text-uppercase mb-1">Total Assets</div>
                            <div class="h3 mb-0 fw-bold text-gray-800" id="totalAssets">@Model.Count</div>
                        </div>
                        <div class="flex-shrink-0 ms-3">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-box-seam fs-1 text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 fw-bold text-primary">
                <i class="bi bi-funnel me-2"></i>Filter Assets
                <button class="btn btn-sm btn-link float-end" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                    <i class="bi bi-chevron-up"></i>
                </button>
            </h6>
        </div>
        <div class="collapse show" id="filterCollapse">
            <div class="card-body">
                <form id="filterForm" class="row g-3">
                    <input type="hidden" name="sortBy" id="sortBy" value="@currentSort" />
                    <input type="hidden" name="sortDir" id="sortDir" value="@currentSortDir" />
                    
                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-uppercase">Search</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   placeholder="Search by asset tag, make, model..." value="@searchTerm">
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-uppercase">Severity</label>
                        <select class="form-select" id="severityFilter" name="severity">
                            <option value="">All Severities</option>
                            <option value="critical">Critical (&lt;60%)</option>
                            <option value="warning">Warning (60-80%)</option>
                        </select>
                    </div>
                    
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-uppercase">Asset Type</label>
                        <select class="form-select" id="assetTypeFilter" name="assetType">
                            <option value="">All Types</option>
                            <option value="Vehicle">Vehicle</option>
                            <option value="Equipment">Equipment</option>
                            <option value="Machinery">Machinery</option>
                            <option value="Electronics">Electronics</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="bi bi-table me-2"></i>Non-Compliant Assets List
                    <span class="badge bg-danger ms-2">@Model.Count Issues Found</span>
                </h6>
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-secondary" onclick="refreshData()">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="assetsTable">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="#" class="sort-link text-decoration-none text-dark" data-sort="assettag">
                                    Asset Tag
                                    @RenderSortIcon("assettag")
                                </a>
                            </th>
                            <th>Make/Model</th>
                            <th>Status</th>
                            <th>
                                <a href="#" class="sort-link text-decoration-none text-dark" data-sort="compliancescore">
                                    Compliance Score
                                    @RenderSortIcon("compliancescore")
                                </a>
                            </th>
                            <th>Severity</th>
                            <th>Issues</th>
                            <th>Last Checked</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                                        <h5 class="mt-3">All Assets are Compliant!</h5>
                                        <p class="text-muted">No non-compliant assets found.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var asset in Model)
                            {
                                var severity = asset.ComplianceScore < 60 ? "Critical" : 
                                              asset.ComplianceScore < 80 ? "Warning" : "Info";
                                var severityClass = severity == "Critical" ? "danger" : 
                                                    severity == "Warning" ? "warning" : "info";
                                
                                <tr>
                                    <td>
                                        <strong>@asset.AssetTag</strong>
                                        <small class="d-block text-muted">ID: @asset.Id</small>
                                    </td>
                                    <td>
                                        @asset.Make @asset.Model
                                        <small class="d-block text-muted">@asset.Year</small>
                                    </td>
                                    <td>
                                        <span class="badge @(asset.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @asset.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                                <div class="progress-bar bg-@severityClass" 
                                                     role="progressbar" 
                                                     style="width: @(asset.ComplianceScore ?? 0)%"
                                                     aria-valuenow="@asset.ComplianceScore" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="fw-bold">@(asset.ComplianceScore?.ToString("F0") ?? "N/A")%</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@severityClass text-white px-3 py-2">
                                            @severity
                                        </span>
                                    </td>
                                    <td>
                                        @if (severity == "Critical")
                                        {
                                            <span class="badge bg-danger">Immediate Action Required</span>
                                        }
                                        else if (severity == "Warning")
                                        {
                                            <span class="badge bg-warning text-dark">Review Required</span>
                                        }
                                    </td>
                                    <td>
                                        @if (asset.LastInspectionDate.HasValue)
                                        {
                                            <small>@asset.LastInspectionDate.Value.ToString("MMM dd, yyyy")</small>
                                            @if ((DateTime.UtcNow - asset.LastInspectionDate.Value).Days > 30)
                                            {
                                                <span class="badge bg-warning ms-1">Overdue</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="AssetDetails" asp-route-id="@asset.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="View Details"
                                               data-bs-toggle="tooltip">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-success" 
                                                    onclick="runComplianceCheck(@asset.Id)"
                                                    title="Run Compliance Check"
                                                    data-bs-toggle="tooltip">
                                                <i class="bi bi-play-circle"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    onclick="viewHistory(@asset.Id)"
                                                    title="View History"
                                                    data-bs-toggle="tooltip">
                                                <i class="bi bi-clock-history"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    private IHtmlContent RenderSortIcon(string column)
    {
        var currentSort = ViewBag.CurrentSort as string ?? "";
        var currentSortDir = ViewBag.CurrentSortDir as string ?? "asc";
        
        if (currentSort.Equals(column, StringComparison.OrdinalIgnoreCase))
        {
            var icon = currentSortDir == "asc" ? "bi-sort-up" : "bi-sort-down";
            return Html.Raw($"<i class=\"bi {icon} ms-1\"></i>");
        }
        
        return Html.Raw("<i class=\"bi bi-arrow-down-up ms-1 text-muted\"></i>");
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Handle sort links
            $('.sort-link').click(function(e) {
                e.preventDefault();
                var sortBy = $(this).data('sort');
                var currentSort = $('#sortBy').val();
                var currentSortDir = $('#sortDir').val();
                
                var sortDir = 'asc';
                if (sortBy === currentSort) {
                    sortDir = currentSortDir === 'asc' ? 'desc' : 'asc';
                }
                
                $('#sortBy').val(sortBy);
                $('#sortDir').val(sortDir);
                applyFilters();
            });

            // Handle filter form submit
            $('#filterForm').submit(function(e) {
                e.preventDefault();
                applyFilters();
            });

            // Handle clear search
            $('#clearSearch').click(function() {
                $('#searchTerm').val('');
                applyFilters();
            });

            // Handle filter changes
            $('#severityFilter, #assetTypeFilter').change(function() {
                applyFilters();
            });
        });

        function applyFilters() {
            var searchTerm = $('#searchTerm').val();
            var severity = $('#severityFilter').val();
            var assetType = $('#assetTypeFilter').val();
            var sortBy = $('#sortBy').val();
            var sortDir = $('#sortDir').val();
            
            // Build query string
            var queryParams = new URLSearchParams({
                searchTerm: searchTerm,
                severity: severity,
                assetType: assetType,
                sortBy: sortBy,
                sortDir: sortDir
            });
            
            window.location.href = '@Url.Action("Assets")?' + queryParams.toString();
        }

        function refreshData() {
            applyFilters();
        }

        function runComplianceCheck(assetId) {
            $.ajax({
                url: '@Url.Action("RunComplianceCheck", "Compliance")',
                type: 'POST',
                data: { assetId: assetId },
                success: function(response) {
                    if (response.success) {
                        if (typeof toastr !== 'undefined') {
                            toastr.success(response.message);
                        } else {
                            alert('Success: ' + response.message);
                        }
                        setTimeout(() => refreshData(), 2000);
                    } else {
                        if (typeof toastr !== 'undefined') {
                            toastr.error(response.message);
                        } else {
                            alert('Error: ' + response.message);
                        }
                    }
                },
                error: function() {
                    if (typeof toastr !== 'undefined') {
                        toastr.error('Error running compliance check');
                    } else {
                        alert('Error running compliance check');
                    }
                }
            });
        }

        function viewHistory(assetId) {
            // You can implement a modal or redirect to history page
            window.location.href = '@Url.Action("AssetDetails", "Compliance")/' + assetId + '?tab=history';
        }

        function exportReport() {
            var searchTerm = $('#searchTerm').val();
            var severity = $('#severityFilter').val();
            var assetType = $('#assetTypeFilter').val();
            
            var queryParams = new URLSearchParams({
                searchTerm: searchTerm,
                severity: severity,
                assetType: assetType
            });
            
            window.location.href = '@Url.Action("ExportReport", "Compliance")?' + queryParams.toString();
        }
    </script>

    <style>
        .empty-state {
            padding: 3rem;
            text-align: center;
        }
        
        .empty-state i {
            font-size: 3rem;
            color: #28a745;
        }
        
        .table th .sort-link {
            display: inline-block;
            width: 100%;
            cursor: pointer;
        }
        
        .table th .sort-link:hover {
            color: #0d6efd !important;
        }
        
        .progress {
            background-color: #e9ecef;
            border-radius: 4px;
        }
        
        .progress-bar {
            transition: width 0.6s ease;
        }
        
        .border-start {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .border-start:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15) !important;
        }
        
        .text-gray-800 {
            color: #2c3e50;
        }
        
        .bg-opacity-10 {
            --bs-bg-opacity: 0.1;
        }
        
        .border-4 {
            border-width: 4px !important;
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .table-responsive {
                border: 0;
            }
            
            .btn-group {
                display: flex;
                flex-direction: column;
            }
            
            .btn-group .btn {
                border-radius: 0.25rem !important;
                margin-bottom: 0.25rem;
            }
        }
    </style>
}