@model List<InsureX.Application.DTOs.PolicyDto>
@{
    ViewData["Title"] = "Asset Policies";
    var assetId = ViewContext.RouteData.Values["id"];
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Policies for Asset</h1>
        <a asp-controller="Assets" asp-action="Details" asp-route-id="@assetId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Asset
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-file-contract fa-4x text-muted mb-3"></i>
                <h5>No Policies Found</h5>
                <p class="text-muted">This asset doesn't have any policies yet.</p>
                <a asp-controller="Policies" asp-action="Create" asp-route-assetId="@assetId" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Policy
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary">Policy List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Policy #</th>
                                <th>Insurer</th>
                                <th>Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Sum Insured</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var policy in Model)
                            {
                                <tr class="@(policy.IsExpired ? "table-danger" : policy.IsExpiringSoon ? "table-warning" : "")">
                                    <td>@policy.PolicyNumber</td>
                                    <td>@policy.InsurerName</td>
                                    <td>@policy.PolicyType</td>
                                    <td>@policy.StartDate.ToShortDateString()</td>
                                    <td>
                                        @policy.EndDate.ToShortDateString()
                                        @if (policy.IsExpiringSoon)
                                        {
                                            <span class="badge bg-warning ms-1">@policy.DaysToExpiry days</span>
                                        }
                                    </td>
                                    <td>@policy.SumInsured.ToString("C")</td>
                                    <td>
                                        <span class="badge @(policy.Status switch {
                                            "Active" => "bg-success",
                                            "Expired" => "bg-danger",
                                            "Pending" => "bg-warning",
                                            _ => "bg-info"
                                        })">
                                            @policy.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Policies" asp-action="Details" asp-route-id="@policy.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>