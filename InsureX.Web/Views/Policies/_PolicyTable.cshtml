@model InsureX.Application.DTOs.PagedResult<InsureX.Application.DTOs.PolicyDto>

<div class="table-responsive">
    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
        <thead class="thead-light">
            <tr>
                <th>
                    <a href="#" class="sort-link" data-sort="policynumber">
                        Policy # <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>Asset</th>
                <th>Insurer</th>
                <th>Type</th>
                <th>
                    <a href="#" class="sort-link" data-sort="startdate">
                        Start Date <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a href="#" class="sort-link" data-sort="enddate">
                        End Date <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>Sum Insured</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="10" class="text-center">No policies found</td>
                </tr>
            }
            else
            {
                @foreach (var policy in Model.Items)
                {
                    <tr class="@(policy.IsExpired ? "table-danger" : policy.IsExpiringSoon ? "table-warning" : "")">
                        <td>@policy.PolicyNumber</td>
                        <td>
                            <a asp-controller="Assets" asp-action="Details" asp-route-id="@policy.AssetId">
                                @policy.AssetTag
                            </a>
                        </td>
                        <td>@policy.InsurerName</td>
                        <td>@policy.PolicyType</td>
                        <td>@policy.StartDate.ToShortDateString()</td>
                        <td>
                            @policy.EndDate.ToShortDateString()
                            @if (policy.IsExpiringSoon)
                            {
                                <span class="badge bg-warning text-white ms-1">@policy.DaysToExpiry days</span>
                            }
                            @if (policy.IsExpired)
                            {
                                <span class="badge bg-danger text-white ms-1">Expired</span>
                            }
                        </td>
                        <td>@policy.SumInsured.ToString("C")</td>
                        <td>
                            <span class="badge @(policy.Status switch {
                                "Active" => "bg-success",
                                "Expired" => "bg-danger",
                                "Pending" => "bg-warning",
                                "Cancelled" => "bg-secondary",
                                _ => "bg-info"
                            }) text-white">
                                @policy.Status
                            </span>
                        </td>
                        <td>
                            <span class="badge @(policy.PaymentStatus switch {
                                "Paid" => "bg-success",
                                "Pending" => "bg-warning",
                                "Overdue" => "bg-danger",
                                _ => "bg-info"
                            }) text-white">
                                @policy.PaymentStatus
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@policy.Id" 
                                   class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@policy.Id" 
                                   class="btn btn-sm btn-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Claims" asp-route-policyId="@policy.Id" 
                                   class="btn btn-sm btn-warning" title="Claims">
                                    <i class="fas fa-file-invoice"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger delete-btn" 
                                        data-id="@policy.Id" data-number="@policy.PolicyNumber" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <div class="row">
        <div class="col-sm-12 col-md-5">
            <div class="dataTables_info">
                Showing @((Model.Page - 1) * Model.PageSize + 1) to 
                @(Math.Min(Model.Page * Model.PageSize, Model.TotalItems)) 
                of @Model.TotalItems entries
            </div>
        </div>
        <div class="col-sm-12 col-md-7">
            <div class="dataTables_paginate paging_simple_numbers">
                <ul class="pagination justify-content-end">
                    <li class="paginate_button page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a href="#" class="page-link page-link-prev" data-page="@(Model.Page - 1)">Previous</a>
                    </li>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="paginate_button page-item @(i == Model.Page ? "active" : "")">
                            <a href="#" class="page-link page-link-num" data-page="@i">@i</a>
                        </li>
                    }
                    
                    <li class="paginate_button page-item @(Model.HasNext ? "" : "disabled")">
                        <a href="#" class="page-link page-link-next" data-page="@(Model.Page + 1)">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}