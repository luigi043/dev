{
   "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=InsureX_Local;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YOUR-SUPER-SECRET-KEY-MINIMUM-32-CHARS-LONG-FOR-HS256",
    "Issuer": "InsureX",
    "Audience": "InsureX-Clients",
    "ExpirationHours": 24,
    "RefreshTokenExpirationDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "RateLimiting": {
    "Enable": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 2
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5001",
      "https://localhost:5002"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"]
  },
  "AllowedHosts": "*"
}